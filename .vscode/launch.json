{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "args": ["${workspaceFolder}/server/reports-app-api/src/main.ts"],
            "runtimeArgs": [
              "--nolazy",
              "-r",
              "ts-node/register",
              "-r",
              "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/server/reports-app-api/.development.env",
            "cwd": "${workspaceRoot}/server/reports-app-api",
            "console": "integratedTerminal",
          }
    ]
}